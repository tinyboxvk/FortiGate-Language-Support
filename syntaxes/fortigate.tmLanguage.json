{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "FortiGate",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#enable"
		},
		{
			"include": "#disable"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.fortigate",
					"match": "#.*$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.fortigate",
					"match": "^\\s*(config [a-zA-Z0-9 -]+|end|edit|next|set|unset)\\b(?!-)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.fortigate",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.fortigate",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.fortigate",
					"match": "(?<![^\\s:])[0-9a-f:,]*/?[\\d:]+(?:[\\.-]\\d+)*\\b(?![\\.-])"
				}
			]
		},
		"enable": {
			"patterns": [
				{
					"name": "storage.modifier.fortigate",
					"match": " (enable|accept|pass|allow)$"
				}
			]
		},
		"disable": {
			"patterns": [
				{
					"name": "invalid.illegal.fortigate",
					"match": " (disable|disabled|deny|block|off)$"
				}
			]
		}
	},
	"scopeName": "source.fortigate"
}